{
    "env": {
        "commonIncludePaths": [
            "${workspaceFolder}/**",
            "${workspaceFolder}/WDL/**",
            "${workspaceFolder}/IPlug/**",
            "${workspaceFolder}/IGraphics/**",
            "${workspaceFolder}/Dependencies/IGraphics/glad_GL2/include/",
            "${workspaceFolder}/Dependencies/IGraphics/NanoVG/src/",
            "${workspaceFolder}/Dependencies/IGraphics/NanoSVG/src/"
        ],
        "commonDefs": [
            "APP_API",
            "IPLUG_DSP=1",
            "IPLUG_EDITOR=1",
            "IGRAPHICS_NANOVG"
        ]
      },
    "configurations": [
        {
            "name": "Mac",
            "includePath": [
                "${commonIncludePaths}",
                "${workspaceFolder}/../../Dependencies/Build/mac/include/**"
            ],
			"defines": [
				"${commonDefs}",
				"IGRAPHICS_METAL"
			],
            "macFrameworkPath": [
                "/System/Library/Frameworks",
                "/Library/Frameworks"
            ],
            "cppStandard": "c++17"
        },
        {
            "name": "Win32",
            "includePath": [
                "${commonIncludePaths}"
            ],
			"defines": [
				"${commonDefs}",
				"IGRAPHICS_GL2"
			]
        }
    ],
    "version": 4
}
