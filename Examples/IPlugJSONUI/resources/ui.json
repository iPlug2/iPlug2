{
  "styles": {
    "main": {
      "colorBG": "#FFFFFF",
      "colorFG": "#FF0000",
      "colorPR": "#FF8833",
      "colorFR": "#666666",
      "roundness": 0.3,
      "drawFrame": true,
      "drawShadows": false,
      "shadowOffset": 3.0
    },
    "slider": {
      "colorBG": "#FFFFFF",
      "colorFG": "#44AAFF",
      "colorPR": "#66CCFF",
      "roundness": 0.1,
      "drawFrame": false,
      "drawShadows": false
    },
    "label": {
      "showLabel": true,
      "showValue": false
    }
  },

  "controls": [
    {
      "type": "IPanelControl",
      "bounds": { "from": "parent" },
      "color": "#FFFFFF"
    },
    {
      "type": "ITextControl",
      "id": "title",
      "bounds": {
        "from": "parent",
        "pad": 20,
        "fracV": [0.12, true]
      },
      "text": "JSON UI Demo",
      "fontSize": 28,
      "align": "center",
      "color": "#FFFFFF"
    },
    {
      "type": "IVGroupControl",
      "id": "controlsGroup",
      "bounds": {
        "from": "parent",
        "pad": -30,
        "fracV": [0.15, true],
        "reduceFromTop": 120
      },
      "label": "Controls",
      "style": "main",
      "children": [
        {
          "type": "IVKnobControl",
          "id": "gainKnob",
          "param": "kGain",
          "bounds": {
            "from": "parent",
            "pad": -10,
            "fracH": [0.33, true]
          },
          "label": "Gain",
          "style": "main"
        },
        {
          "type": "IVSliderControl",
          "id": "mixSlider",
          "param": "kMix",
          "bounds": {
            "from": "parent",
            "pad": -10,
            "fracH": [0.33, false]
          },
          "label": "Mix",
          "style": "slider",
          "direction": "vertical"
        }
      ]
    },
    {
      "type": "IVLabelControl",
      "bounds": {
        "from": "parent",
        "fracV": [0.08, false],
        "pad": -10
      },
      "label": "Edit ui.json and save to see changes!",
      "style": "label"
    }
  ]
}
